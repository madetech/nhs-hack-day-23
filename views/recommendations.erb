<div class="nhsuk-u-padding-2"></div>
<div class="nhsuk-width-container">
  <form method="GET" action="/done">
    <input type="hidden" name="session" value="<%= session.encode %>" />
    <div class="nhsuk-u-padding-bottom-5">
      <h3>Recommendations</h3>
      <% recommendations.each do |recommendation| %>
        <div>
          <h4><%= recommendation[:title] %></h4>
          <p><%= recommendation[:description] %></p>
          <div class="nhsuk-checkboxes__item">
            <input class="nhsuk-checkboxes__input"
                   id="example-1"
                   name="example"
                   type="checkbox"
                   value="email">
            <label class="nhsuk-label nhsuk-checkboxes__label"
                   for="example-1">
              Recommended
            </label>
          </div>
        </div>
      <% end %>
    </div>
    <button class="nhsuk-button" type="submit">
      Save and continue
    </button>
  </form>
</div>
